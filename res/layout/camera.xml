<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="38sp"
        android:text="BeastMode"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Header"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Choose from your library" />

    <Button
        android:id="@+id/CameraUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Library"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="Use Camera" />
    
    <EditText
        android:id="@+id/AdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CameraUpload"
        android:layout_below="@+id/CameraUpload"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Add a message and/or tags"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/imageUploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AdditionalInfo"
        android:layout_below="@+id/AdditionalInfo"
        android:layout_marginTop="20dp"
        android:text="Upload" />

    <TextView
        android:id="@+id/uploadStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageUpload"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignRight="@+id/Library"
        android:layout_alignTop="@+id/CameraUpload"
        android:src="@android:drawable/alert_light_frame" />

</RelativeLayout>