<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
    android:id="@+id/BeastMode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="BeastMode"
    android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/subscribed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BeastMode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Subscribed Streams"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

<GridView
    android:id="@+id/subscribedGridview"
    android:layout_width="fill_parent"
    android:layout_height="270dp"
    android:layout_below="@+id/subscribed"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:columnWidth="80dp"
    android:gravity="center"
    android:horizontalSpacing="10dp"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:verticalSpacing="10dp" />

<Button
    android:id="@+id/viewAll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/subscribedGridview"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="View All Streams" />

</RelativeLayout>